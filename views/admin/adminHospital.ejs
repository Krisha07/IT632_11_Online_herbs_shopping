<%- include("../partials/header") %> 
<title>Hospital</title>
</head>
<body>
<%- include("../partials/navbar") %> 
<%- include("../partials/flash") %> 
<main>
<div class="container">
    <h2 class="order-heading my-3 text-center">Admin Add Hospital Page</h2>
    <hr>
    <div class="backButton-container d-flex justify-content-center my-2">            
        <a href="/admin/home" class="admin-home btn btn-primary btn-lg" id="adminHomeButton"><i class="fas fa-arrow-left"></i> &nbsp;Back</a>
    </div>

    <div class="container tm-mt-big tm-mb-big">
      <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
          <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
            <div class="row">
              <div class="col-12">
                <h2 class="tm-block-title d-inline-block">Add Hospital</h2>
              </div>
            </div>
            <div class="row tm-edit-product-row">
              <div class="col-xl-6 col-lg-6 col-md-12">
                <form action="/admin/addHospital" method="POST" class="tm-edit-product-form">
                  <div class="form-group mb-3">
                    <label
                      for="name"
                      >Hospital Name
                    </label>
                    <input
                      id="name"
                      name="name"
                      type="text"
                      class="form-control validate"
                      required
                    />
                  </div>

                  <div class="form-group mb-3">
                    <label
                      for="name"
                      >Hospital Contact Number
                    </label>
                    <input
                      id="name"
                      name="phone_no"
                      type="text"
                      class="form-control validate"
                      required
                    />
                  </div>

                  <div class="form-group mb-3">
                    <label
                      for="name"
                      >Hospital Licence
                    </label>
                    <input
                      id="number"
                      name="license_no"
                      type="text"
                      class="form-control validate"
                      required
                    />
                  </div>

                  <div class="form-group mb-3">
                    <label
                      for="name"
                      >Hospital Address
                    </label>
                    <input
                      id="name"
                      name="address"
                      type="text"
                      class="form-control validate"
                      required
                    />
                  </div>

                  <div class="form-group mb-3">
                    <label
                      for="name"
                      >Hospital Disease Tag
                    </label>
                    <select name="disease_tag">
                      <% data.forEach(item => { %>
                        <option value="<%= item.name %>"><%= item.name %></h1></option>
                        <% }) %>
                    </select>
                  </div>
              </div>
              
              <div class="col-12">
                <button type="submit" class="btn btn-primary btn-block text-uppercase">Add Hospital</button>
              </div>
            </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  
<%- include("../partials/footer") %>