<%- include("../partials/header") %>
<title>Edit Profile</title>
</head>
<body>
<%- include("../partials/navbar") %> 
<%- include("../partials/flash") %> 
<main class="body-container">
    <div class="home container">
        <h1 class="text-center my-2">Edit Profile</h1>
        <hr>
        <div class="forms res-width m-auto">
            <form action="/user/<%=data._id %>?_method=PATCH" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
                  <div class="form-outline mb-4">
                    <input type="text" id="state" class="form-control" name="state" value="<%=data.state%>" required/>
                    <label class="form-label" for="state">State</label>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Not a valid price!</div>
                  </div>
                  <div class="form-outline mb-4">
                    <input type="text" id="city" class="form-control" name="city" value="<%=data.city%>" />
                    <label class="form-label" for="city">City</label>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Not a valid image link</div>
                  </div>
                  <div class="form-outline mb-4">
                    <input type="text" id="pincode" class="form-control" name="pincode" value="<%=data.pincode%>" />
                    <label class="form-label" for="pincode">Pincode</label>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Not a valid image link</div>
                  </div>
                  <div class="form-outline mb-4">
                    <input type="text" id="address" class="form-control" name="address" value="<%=data.address%>" />
                    <label class="form-label" for="address">Address</label>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Not a valid image link</div>
                  </div>
                  <div class="form-outline mb-4">
                    <input type="text" id="contact" class="form-control" name="contact" value="<%=data.contact%>" />
                    <label class="form-label" for="contact">Contact</label>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Not a valid image link</div>
                  </div>
                  <div class="form-outline mb-5">
                    <input type="file" class="form-control" name="image" id="customFile" />
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Not a valid image file!</div>
                  </div>
                  <div class="btn-container d-flex flex-column w-50 justify-center m-auto">
                    <button type="submit" class="btn btn-primary mb-4">Save</button>
                    <!-- <button type="reset" class="btn btn-primary mb-4">Reset</button> -->
                  </div>
                  
            </form>
        </div>
    </div>
  
</main>
<%- include("../partials/footer") %>