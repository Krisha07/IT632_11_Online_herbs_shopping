<main>
  <br>
  <form id="form" style="margin: 0px 10em;" action="/product/search" method="post"> 

  <div class="form-row">
    <div class="form-group col-md-6">
      <input type="search" class="form-control  " id="name" name="name" placeholder="Search...">
    </div>
    <div class="form-group col-md-4">
      <select name="searchtag" class="form-control ">
        <option value="searchByname">Search Product By Name</option>
        <option value="searchProductByDisease">Search Product By Disease</option>
        <option value="searchHospital">Search hospital</option>
      </select>  
    </div>
    <div class="form-group col-md-2">
      <input type="submit" class="form-control btn bg-success" value="Search">
    </div>
  </div>
</form>

  <br>

  <!-- Slideshow container -->
<div class="slideshow-container">

  <!-- Full-width images with number and caption text -->
  <div class="mySlides fade">
    <div class="numbertext">1 / 3</div>
    <img src="/images/1.jpg" style="width:100%;" height=400em>
    <div class="text" style="margin-bottom: 15%;">
      <h1 style="color:white; border: 5px solid black; display: inline; font-size: 80px; font-family: 'Times New Roman', Times, serif;">Welcome to ALL HEAL</h1>
    </div>
  </div>

  <div class="mySlides fade">
    <div class="numbertext">2 / 3</div>
    <img src="/images/4.jpg" style="width:100%;" height=400em>
    <div class="text" style="margin-bottom: 15%;">
      <h1 style="color:white; border: 5px solid black; display: inline; font-size: 80px; font-family: 'Times New Roman', Times, serif;">Welcome to ALL HEAL</h1>
    </div>
  </div>

  <div class="mySlides fade">
    <div class="numbertext">3 / 3</div>
    <img src="/images/5.jpg" style="width:100%;" height=400em>
    <div class="text" style="margin-bottom: 15%;">
      <h1 style="color:white; border: 5px solid black; display: inline; font-size: 80px; font-family: 'Times New Roman', Times, serif;">Welcome to ALL HEAL</h1>
    </div>
  </div>

  <!-- Next and previous buttons -->
  <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>
<br>

<!-- The dots/circles -->
<div style="text-align:center">
  <span class="dot" onclick="currentSlide(1)"></span>
  <span class="dot" onclick="currentSlide(2)"></span>
  <span class="dot" onclick="currentSlide(3)"></span>
</div>

  <div class="home-body container mt-4">   
    
        <!-- Start Categories  -->
    <div class="categories-shop">
      <div class="container">  
          <div class="row" style="display: flex; flex-direction: row;">  
            <% for(let index=data.length-1;index>=0;index--){let item=data[index];%>
              
              <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                     
                  <div class="shop-cat-box">
                    <%if(item.image!=undefined && item.image.data!=undefined){%>
                      <img
                              src="data:image/<%=item.image.contentType%>;base64,<%=item.image.data.toString('base64')%>"
                              class="img-fluid" style="height:15em" />
                            <%} else{ %>
                              <img src="<%=item.img%>" style="height:15em" class="img-fluid" alt="Item Image" class="img-fluid" />
                               <%}%>                               
                               <a class="btn hvr-hover" href="/products/<%=item._id%>">View More</a>
                     
                  </div>
              </div>        
              <%}%>
            
          </div>
      </div>
  </div>
  <!-- End Categories -->

    </div>
    <script>
let slideIndex = 0;
showSlides();

function showSlides() {
  let i;
  let slides = document.getElementsByClassName("mySlides");
  for (i = 0; i < slides.length; i++) {
    slides[i].style.display = "none";
  }
  slideIndex++;
  if (slideIndex > slides.length) {slideIndex = 1}
  slides[slideIndex-1].style.display = "block";
  setTimeout(showSlides, 2000); // Change image every 2 seconds
}
    </script>
</main>
