        <form id="form" style="margin: 0px 10em;" action="/product/search" method="post"> 

          <div class="form-row">
            <div class="form-group col-md-6">
              <input type="search" class="form-control  " id="name" name="name" placeholder="Search...">
            </div>
            <div class="form-group col-md-4">
              <select name="searchtag" class="form-control ">
                <option value="searchByname">Search Product By Name</option>
                <option value="searchProductByDisease">Search Product By Disease</option>
                <option value="searchHospital">Search hospital</option>
              </select>  
            </div>
            <div class="form-group col-md-2">
              <input type="submit" class="form-control btn bg-success" value="Search">
            </div>
          </div>
        </form>
        <section class="product-holder my-3">
          <% if(data.length<1){ %> 
            <h3 class="text-center my-3">Sorry no products are available</h3>
          <%}
          else{%>
            <div class="card-row my-3 row d-flex justify-content-evenly flex">

                <% for(let index=data.length-1;index>=0;index--){
                    let item=data[index];
                    %>
                    <div class="product-card card col-md-3 ">
                        <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light" style="border-radius: 12px 12px 0px 0px;">
                          
                          <% if(item.image !=undefined && item.image.data!=undefined){ %>
                          <img
                            src="data:image/<%=item.image.contentType%>;base64,<%=item.image.data.toString('base64')%>"
                            class="img-fluid"
                          />
                        <%}
                        else{ %>
                        <img
                            src="<%=item.img%>"
                            class="img-fluid"
                            alt="Item Image"
                            class="img-fluid"
                          />
                       <%}%>
                          <a href="#!">
                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                          </a>
                        </div>
                        <div class="card-body ">
                          <h5 class="card-title"> <%= item.name%> </h5>
                          <h6 class="card-subtitle mb-2 text-muted">Price &#8377; <%=item.price%></h6>
                          <p class="card-text">
                            <%=item.desc.slice(0,90)%>...
                          </p>
                          <a href="/products/<%=item._id%>" class="btn btn-primary">View More</a>
                        </div>
                      </div>
                <%}%>
            </div>
          <%}%>
            
        </section>
    </div>
</main>
